---
interface Props {
	class?: string;
	width?: number;
	height?: number;
	ariaLabel?: string;
}

const {
	class: className = "",
	width = 24,
	height = 24,
	ariaLabel,
} = Astro.props;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	width={width}
	height={height}
	viewBox="0 0 24 24"
	fill="none"
	stroke="currentColor"
	stroke-width="2"
	stroke-linecap="round"
	stroke-linejoin="round"
	aria-label={ariaLabel || "Search Icon"}
	class={className}
	><path d="m21 21-4.34-4.34"></path><circle cx="11" cy="11" r="8"
	></circle></svg
>
