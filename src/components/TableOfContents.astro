---
import type { MarkdownHeading } from "astro";

interface Props {
	headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const getMarginClass = (depth: number) => {
	switch (depth) {
		case 1:
			return "ml-0";
		case 2:
			return "ml-2";
		case 3:
			return "ml-4";
		default:
			return "ml-6";
	}
};

const getTextSizeClass = (depth: number) => {
	if (depth === 1) {
		return "text-base font-semibold";
	} else if (depth === 2) {
		return "text-sm font-medium";
	} else {
		return "text-sm";
	}
};
---

<aside
	class="xl:border-foreground/50 hidden xl:sticky xl:top-20 xl:block xl:h-fit xl:w-64 xl:overflow-y-auto xl:border-l-2 xl:px-6 xl:py-4"
>
	<nav>
		<p class="mb-6 font-semibold">On this page</p>
		<ul class="space-y-1 text-sm">
			{
				headings.map((heading) => (
					<li
						class={`${getMarginClass(heading.depth)} ${getTextSizeClass(heading.depth)}`}
					>
						<a
							href={`#${heading.slug}`}
							class="text-muted hover:text-primary"
						>
							{heading.text}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</aside>
