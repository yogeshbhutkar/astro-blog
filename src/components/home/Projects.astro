---
import { PROJECTS } from "@/lib/data";
---

<section class="group" style="--stagger-index: 3">
	<h1 class="max-sm:text-md mb-3 text-left text-lg font-semibold">
		Projects
	</h1>

	{
		PROJECTS.map((project) => (
			<div class="text-foreground mb-6 opacity-100 transition-opacity duration-150 ease-in-out group-hover:opacity-45 hover:!opacity-100">
				<a
					class="mb-1 font-semibold decoration-blue-400 decoration-wavy decoration-2 underline-offset-2 hover:underline dark:decoration-blue-300"
					href={project.url || project.repo}
					target="_blank"
				>
					{project.name}
				</a>
				<p class="text-muted mb-1 font-normal">
					{project.description}
				</p>
			</div>
		))
	}
</section>
