---
import Logo from "@/icons/logo.astro";
import ThemeToggle from "./ThemeToggle.astro";
import SkipToContent from "./SkipToContent.astro";

const isBlogPage = Astro.url.pathname.startsWith("/blog/");
---

<header
	class="bg-background/20 text-foreground/75 text-md sticky top-0 z-40 mb-10 w-full backdrop-blur-sm backdrop-filter"
>
	{isBlogPage && <SkipToContent slot="skip-to-content" />}
	<nav
		class="mx-auto flex h-16 items-center justify-between max-sm:px-6 sm:max-w-sm md:max-w-xl lg:max-w-2xl"
	>
		<a href="/" class="flex items-center space-x-1.5">
			<Logo class="h-6 w-6 rounded-full p-0.5" />
			<span class="font-cursive text-2xl font-extrabold"
				>Yogesh{" "}Bhutkar</span
			>
		</a>
		<div class="flex items-center gap-x-2">
			<a href="/blog">Blogs</a>
			<span class="pointer-events-none select-none">/</span>
			<a href="https://github.com/yogeshbhutkar" target="_blank">
				GitHub
			</a>
			<ThemeToggle />
		</div>
	</nav>
</header>
