---
import Logo from "@/icons/logo.astro";
import ThemeToggle from "./ThemeToggle.astro";
import SkipToContent from "./SkipToContent.astro";
import { SOCIALS } from "@/lib/data.ts";
import Github from "@/icons/github.astro";
import LinkedIn from "@/icons/linked-in.astro";

const isBlogPage = Astro.url.pathname.startsWith("/blog/");
---

<header
	class="bg-background/20 text-foreground/75 text-md sticky top-0 z-40 mb-10 w-full backdrop-blur-sm backdrop-filter max-sm:mb-4"
>
	{isBlogPage && <SkipToContent slot="skip-to-content" />}
	<nav
		class="mx-auto flex h-16 items-center justify-between max-sm:px-6 sm:max-w-sm md:max-w-xl lg:max-w-2xl"
	>
		<a href="/" class="flex items-center space-x-1.5">
			<Logo class="h-6 w-6 rounded-full p-0.5" />
			<span
				class="font-cursive text-2xl font-extrabold max-sm:text-xl"
				>Yogesh{" "}Bhutkar</span
			>
		</a>
		<div class="flex items-center gap-x-2">
			<a
				href="/blog"
				class="decoration-blue-400 decoration-wavy decoration-2 underline-offset-4 hover:underline dark:decoration-blue-300"
			>
				Blogs
			</a>
			<span class="pointer-events-none select-none">/</span>
			<a href={SOCIALS.github} target="_blank" aria-label="GitHub">
				<Github height={16} width={16} />
			</a>
			<span class="pointer-events-none select-none">/</span>
			<a
				href={SOCIALS.linked_in}
				target="_blank"
				aria-label="LinkedIn"
			>
				<LinkedIn height={16} width={16} />
			</a>
			<ThemeToggle />
		</div>
	</nav>
</header>
